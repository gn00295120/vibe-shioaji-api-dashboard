API_KEY=your_shioaji_api_key_here
SECRET_KEY=your_shioaji_secret_key_here

# Dashboard Authentication
AUTH_KEY=your_secure_auth_key_here

# Supported Futures Products (comma-separated)
# Common options: MXF (小台), TXF (大台), EXF (電子期), FXF (金融期), etc.
# See: https://sinotrade.github.io/zh/tutor/contract/
SUPPORTED_FUTURES=MXF,TXF

# CA Certificate (Required for REAL trading, not needed for simulation)
# Download from Sinopac and place the .pfx file in a mounted volume
# person_id (身分證字號) is auto-detected from your account after login
CA_PATH=/app/certs/Sinopac.pfx
CA_PASSWORD=your_ca_password_here

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/shioaji
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=shioaji
